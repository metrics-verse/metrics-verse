{
  "name": "@metrics-verse/cli",
  "author": "",
  "description": "Stricli command line application",
  "license": "MIT",
  "type": "module",
  "version": "0.0.1",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "__cli_bash_complete": "dist/bash-complete.js",
    "cli": "dist/cli.js"
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "prebuild": "tsc -p src/tsconfig.json",
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "postinstall": "cli install"
  },
  "tsup": {
    "entry": [
      "src/bin/cli.ts",
      "src/bin/bash-complete.ts"
    ],
    "format": [
      "esm"
    ],
    "tsconfig": "src/tsconfig.json",
    "clean": true,
    "splitting": true,
    "minify": true
  },
  "dependencies": {
    "@metrics-verse/ui-metrics": "workspace:^",
    "@stricli/auto-complete": "^1.1.0",
    "@stricli/core": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "tsup": "^6.7.0",
    "typescript": "5.6.x"
  }
}
